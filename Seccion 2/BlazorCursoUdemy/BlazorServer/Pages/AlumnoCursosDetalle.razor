@page "/AlumnoCursosDetalle/{idAlumno:int}"
@using BlazorServer.Servicios;
@using ModeloClasesAlumnos;
@attribute [Authorize]

<h1>Listado de Cursos de @Alumno?.Nombre</h1>

<div class="form-group row">
    <div class="col-sm-10">
        <a href="@($"InscribirAlumno/{idAlumno}")" class="btn btn-primary m-1">Inscribir alumno en curso</a>
        <a href="/ListaAlumnos" class="btn btn-secondary m-1">Volver a la lista de alumnos</a>
    </div>
</div>

@if (Alumno == null)
{
    <div class="spinner"></div>
}
else if (Alumno.ListaCursos == null || !Alumno.ListaCursos.Any())
{
    <p class="text-danger">Este alumno no está inscrito en ningún curso.</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th><strong>Nombre</strong></th>
                <th><strong>Email</strong></th>
                <th><strong>Nombre curso</strong></th>
                <th><strong>Precio</strong></th>
                <th><strong>Fecha Inicio</strong></th>
                <th><strong>Fecha Fin</strong></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var curso in Alumno.ListaCursos)
            {
                if (curso.ListaPrecios == null || !curso.ListaPrecios.Any())
                {
                    <tr>
                        <td>@Alumno.Nombre</td>
                        <td>@Alumno.Email</td>
                        <td>@curso.NombreCurso</td>
                        <td colspan="3" class="text-muted">No tiene</td>
                    </tr>
                }
                else
                {
                    foreach (var precio in curso.ListaPrecios)
                    {
                        <tr>
                            <td>@Alumno.Nombre</td>
                            <td>@Alumno.Email</td>
                            <td>@curso.NombreCurso</td>
                            <td class="text-success"><strong>@precio.Coste €</strong></td>
                            <td>@precio.FechaInicio.ToString("dd/MM/yyyy")</td>
                            <td>@precio.FechaFin.ToString("dd/MM/yyyy")</td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
}
