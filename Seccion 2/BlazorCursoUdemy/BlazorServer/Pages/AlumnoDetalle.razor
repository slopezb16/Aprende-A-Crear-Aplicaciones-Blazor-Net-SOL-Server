@page "/AlumnoDetalle/{id:int}/{modo}"
@attribute [Authorize]

<h3 class="text-center my-3">@(EsModoEdicion ? "Editar Alumno" : "Detalles del Alumno")</h3>

@if (IsLoading)
{
    <div class="d-flex justify-content-center my-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Cargando...</span>
        </div>
    </div>
}
else if (Alumno != null)
{
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card p-4 shadow-lg">
                    <div class="text-center">
                        <img class="rounded-circle img-fluid mb-3" src="@Alumno.Foto" alt="Foto de @Alumno.Nombre" style="width: 150px; height: 150px; object-fit: cover;" />
                    </div>
                    <div class="card-body">
                        <EditForm Model="Alumno" OnValidSubmit="GuardarCambios">
                            <DataAnnotationsValidator />

                            <div class="mb-3">
                                <label class="form-label">Nombre:</label>
                                <InputText class="form-control" @bind-Value="Alumno.Nombre" disabled="@(!EsModoEdicion)" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Correo Electrónico:</label>
                                <InputText class="form-control" @bind-Value="Alumno.Email" disabled="@(!EsModoEdicion)" />
                            </div>
                            <div class="mb-3">
                                <label class="form-label">Fecha de Alta:</label>
                                <InputDate class="form-control" @bind-Value="Alumno.FechaAlta" disabled />
                            </div>

                            @if (Alumno.FechaBaja != null)
                            {
                                <div class="mb-3">
                                    <label class="form-label text-danger">Fecha de Baja:</label>
                                    <InputDate class="form-control bg-danger" @bind-Value="Alumno.FechaBaja" disabled />
                                </div>
                            }

                            @if (EsModoEdicion)
                            {
                                <div class="mb-3">
                                    <label class="form-label">Foto:</label>
                                    <InputSelect class="form-select" @bind-Value="FotoSeleccionada">
                                        @foreach (var foto in FotosDisponibles)
                                        {
                                            <option value="@foto">@Path.GetFileName(foto)</option>
                                        }
                                    </InputSelect>
                                </div>
                            }

                            <div class="d-flex justify-content-between flex-wrap">
                                <button class="btn btn-secondary" type="button" @onclick="Cancelar">Volver</button>

                                @if (!EsModoEdicion)
                                {
                                    <button class="btn btn-outline-warning m-1" type="button" @onclick="EditarAlumno">Editar</button>
                                }

                                @if (Alumno.FechaBaja == null)
                                {
                                    <button class="btn btn-outline-danger m-1" type="button" @onclick="BorrarAlumno">Borrar</button>
                                }
                                else
                                {
                                    <button class="btn btn-outline-success m-1" @onclick="() => ActivarAlumno(Alumno)">Activar</button>
                                }

                                @if (EsModoEdicion)
                                {
                                    <button class="btn btn-success m-1" type="submit">Guardar</button>
                                }
                            </div>
                        </EditForm>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p class="text-danger text-center">Alumno no encontrado.</p>
}
